		Opportunity opp = seekOpportunity();
		/* FIXME */
		Score score = (Util.ensure(opp)) ? Score.newScore(null, this, opp) : null;
		
		if ((Util.ensure(score)) ? acceptWork(score) : false) { 
			/* String detail = gatherInformation(opp); */
			selectTeam(score).forEach(score::addTeam);
		}
	}
	
	boolean acceptWork(Score score) {
		boolean accepted = false;

		// TODO
		if (getRoster().count() > 0) {
			accepted = scores.add(score);
		}

		return accepted;
	}
	
	String gatherInformation(Opportunity opp) {
		String detail = null;
		if (Util.ensure(opp)) {
			Rogue rog = getRoster().filter(Predicate.not(Rogue::getTapped)).findAny().get();
